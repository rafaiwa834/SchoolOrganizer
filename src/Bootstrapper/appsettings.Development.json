{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Postgres": {
    "ConnectionString": "Server=localhost;Port=5432;User Id=postgres;Password=admin;Database=SchoolOrganizer;"
  },
  "Auth": {
    "Key": "gserfc32dfg453gsad34f3",
    "ValidateKey": true,
    "Issuer": "http://schoolorganizer.test",
    "ValidateIssuer": true,
    "Audience": "http://schoolorganizer.test",
    "ValidateAudience": true,
    "DurationInMinutes": "15",
    "ValidateLifetime": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Expressions"],
    "WriteTo":[
      { 
        "Name":  "Console"
      },
      {
        "Name": "File",
        "Args": 
          { 
            "path":  "Logs/log.txt",
            "rollingInterval": "Day"
          }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args":
                {
                  "path":  "Logs/warning.txt",
                  "rollingInterval": "Day"
                }
              }
            ],
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "@Level = 'Critical' and UploadError is not null"
                }
              }
            ]
          }
        }
      }
    ]
    
  }

}
